---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"ul">;

const props = Astro.props;
---

<ul {...props} class:list={['ul', props.class]}>
  <slot />
</ul>

<style>
  :global(.ul li) {
    position: relative;
    padding-inline-start: 2rem;
