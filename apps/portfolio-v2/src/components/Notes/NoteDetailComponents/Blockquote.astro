---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"blockquote">;
const props = Astro.props;
---

<blockquote
	{...props}
	class="relative text-gray11 *:after:absolute *:after:ml-0.5 *:after:content-[close-quote]"
>
	<slot/>
</blockquote>

<style>
	blockquote {
		quotes: "“" "”" "‘" "’";
	}

	blockquote::before {
		content: open-quote;
		position: absolute;
		left: -2px;
		transform: translateX(-100%);
	}
</style>
