---
export type Props = {
  className?: string
}

const { className } = Astro.props
---

<button
  class:list={[
    'h-10 px-3 rounded-lg transition-colors border border-[var(--gray7)] hover:border-[var(--gray8)] bg-[var(--gray1)] dark:border-[var(--gray6)] dark:bg-[var(--grayA3)]',
    className,
  ]}
  ><slot />
</button>

<style>
  button {
    --shadow-color: 0 0 0;
  }
  .dark,
  button {
    --shadow-color: 255 255 255;
  }

  button {
    box-shadow: 0 3px 2px -2px rgba(var(--shadow-color) / 0.1);
    -webkit-tap-highlight-color: transparent;
  }
</style>
