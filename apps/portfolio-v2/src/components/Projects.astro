---
import BrowserBox from './BrowserBox.astro'
---

<section class="mt-8 w-full">
  <h3 class="mb-6 text-sm text-gray11">Projects</h3>

  <div
    class="relative flex aspect-[.30] w-full flex-col gap-8 md:isolate md:aspect-[1.1]"
  >
    <a
      href="https://daily.orlan.dev"
      target="_blank"
      class="w-full md:absolute md:bottom-0 md:left-[initial] md:right-0 md:top-[initial] md:z-10 md:max-w-lg"
    >
      <BrowserBox title="Daily Stoic" aspect="desktop" />
    </a>
    <a
      href="https://github.com/orlantquijada/money-manager"
      class="w-full md:absolute md:left-0 md:top-0 md:max-w-xs md:hover:z-10"
      style={{ '--stack': 1 }}
    >
      <BrowserBox title="Money Manager" aspect="phone" />
    </a>
  </div>
</section>

<style>
  a {
    --header-height: 2.5rem;
    --header-gap: 2.5rem;
    --content-gap: 1rem;
    --stack: 0;
    --top: calc(
      var(--header-gap) + var(--header-height) + var(--content-gap) +
        (var(--stack) * 0.5rem)
    );

    position: sticky;
    left: 0;
    top: var(--top);
  }
</style>
