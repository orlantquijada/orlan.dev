{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "esnext"
    ],
    "module": "ESNext",
    "target": "ES2018",
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "panda.config.ts",
    "styled-system"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
