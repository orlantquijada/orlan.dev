{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "module": "Node16",
    "lib": [
      "ES2024",
      "DOM"
    ],
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "panda.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
